generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String
  password  String
  role      userRoles @default(USER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("Users")
}

enum userRoles {
  SUPERADMIN
  ADMIN
  PROFESSIONAL
  USER
}
